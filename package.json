{
	"name": "action-archive",
	"version": "0.3.1",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Hugos68/action-archive"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "vitest run",
		"test:watch": "vitest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"ci-cd": "pnpm format && pnpm lint && pnpm check && pnpm test && pnpm build",
		"release": "pnpm run build && changeset publish"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/docs/**"
	],
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@fontsource/inter": "^5.0.13",
		"@melt-ui/pp": "^0.1.2",
		"@melt-ui/svelte": "^0.53.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.25.2",
		"@sveltejs/package": "^2.2.2",
		"@sveltejs/vite-plugin-svelte": "^2.4.6",
		"@testing-library/svelte": "^4.0.4",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/parser": "^6.7.5",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.51.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.34.0",
		"highlight.js": "^11.9.0",
		"jsdom": "^22.1.0",
		"postcss": "^8.4.31",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.1.16",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"svelte-feather-icons": "^4.0.1",
		"svelte-sequential-preprocessor": "^2.0.1",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.11",
		"vitest": "^0.32.4"
	},
	"svelte": "./dist/index.js",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"packageManager": "pnpm@8.8.0",
	"dependencies": {
		"svelte": "^4.2.1"
	}
}
